<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/4d515a562c.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/admin-styles.css" />
    <link rel="icon" href="favicon.ico?v=1.1" />
    <title>pizzApp</title>
  </head>
  <body>
    <div class="page">
      <div class="sidemenu">
        <!-- Todo  -->
        <div class="logo">
          <img src="/images/logo/logo.png" alt="" />
        </div>
        <div class="categories">
          <% for (let i = 0; i < categories.length; i++) { %>
          <a
            href="/admin/products/<%=categories[i].name%>"
            class="category btn <%= category === categories[i].name ? 'visited' : '' %>"
          >
            <img src="<%=categories[i].image%>" alt="" />
          </a>
          <% } %>
        </div>
      </div>

      <div class="mainarea">
        <div class="background"></div>
        <div class="navbar">
          <ul>
            <li><a href="/" class="selected">Foo</a><span>d</span></li>
            <li><a href="/about">About </a><span>Us</span></li>
            <li><a href="#">Contact </a><span>Us</span></li>
          </ul>
          <ul>
            <li>
              <a href="#"> <%=username.split('@')[0].toUpperCase() %> </a>
            </li>
            <img id="profile-picture" src="/admin/profile-picture" alt="" />
            <li><a href="/admin/logout">Log out </a></li>
          </ul>
        </div>
        <!-- Hero -->
        <div class="hero">
          <div class="quick-button-conaitner">
            <a
              href="/admin/products/<%=category%>/0/edit?newItem=true"
              class="btn"
              >Add New <i class="fas fa-plus-square"></i
            ></a>
          </div>
          <div class="products-container">
            <% for(let product of products){ %>
            <a
              href="<%=category %>/<%=product.id %>/edit "
              class="product-card"
            >
              <div class="content">
                <h1><%=product.name%></h1>
                <p>With <%=product.ingredients %></p>
                <h1>
                  <span>$</span><span class="thin"><%=product.price %> </span>
                </h1>
              </div>
              <div class="image">
                <img src="/<%=product.image %> " alt="" id="product-image" />
              </div>
            </a>
            <% } %>
          </div>
        </div>

        <!-- Footer -->
        <div class="items">
          <div class="social">
            <i class="fab fa-facebook-f"></i>
            <i class="fab fa-twitter"></i>
            <i class="fab fa-instagram-square"></i>
          </div>
          <div class="next">
            <i class="fas fa-long-arrow-alt-right fas fa-3x"></i>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
